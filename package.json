{
  "name": "hawkpass",
  "description": "Desktop password generator built on electron",
  "version": "1.1.0",
  "author": "Petros Kalogiannakis (@kalpetros)",
  "licence": "MIT",
  "homepage": "https://github.com/kalpetros/hawkpass",
  "repository": "https://github.com/kalpetros/hawkpass",
  "bugs": {
    "url": "https://github.com/kalpetros/hawkpass/issues"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "develop": "parcel src/index.html",
    "build": "parcel build --public-url ./ src/index.html",
    "format": "prettier \"**/*.{js, html}\" --write",
    "lint": "eslint \"**/*.js\"",
    "test": "jest",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "electron-squirrel-startup": "^1.0.0",
    "postcss": "^7.0.35",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.0.3",
    "eslint": "^7.15.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icon.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "hawkpass"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "productName": "Hawkpass",
              "icon": "icon.png",
              "homepage": "https://github.com/kalpetros/hawkpass",
              "version": "1.1.0",
              "maintainer": "Petros Kalogiannakis"
            }
          }
        }
      ]
    }
  }
}
